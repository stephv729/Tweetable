<div class="container bg-white">
  <h2 class="content-lg center p-1">Sign up</h2>
  <div data-turbo="false" class="border-bg">
    <div class="container-sm mt-1_625">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email , class:"content-sm"%><br />
          <%= f.email_field :email, autofocus: true, class: "input__content input__container"%>
        </div>
        
        <div class="field">
          <%= f.label :username, class:"content-sm" %><br />
          <%= f.text_field :username, class: "input__content input__container" %>
        </div>

        <div class="field">
          <%= f.label :name, class:"content-sm" %><br />
          <%= f.text_field :name, class: "input__content input__container" %>
        </div>

        <div class="field">
          <%=f.label :cover, "Avatar", class:"content-sm"%>
          <%=f.file_field :cover, accept: "image/png, image/jpeg", class:"input__content input__container"%>   
        </div>

        <div class="field">
          <%= f.label :password, class:"content-sm" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, class: "input__content input__container" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class:"content-sm" %><br />
          <%= f.password_field :password_confirmation, class: "input__content input__container" %>
        </div>

        <div class="actions flex flex-center-items mt-0_5">
          <%= f.submit "Submit", class: "button button--primary" %>
        </div>
      <% end %>

      <div class="center"> <%= render "devise/shared/links" %> </div>
    </div>
  </div>
</div>
