<div class="container bg-white">
  <h2 class="content-lg center p-1">Edit <%= resource_name.to_s.humanize %></h2>
  <div class="border-bg">
    <div class="container-sm mt-1_625">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class:"content-sm" %><br />
        <%= f.email_field :email, autofocus: true, class: "input__content input__container"%>
      </div>

      <div class="field">
        <%= f.label :username, class:"content-sm" %><br />
        <%= f.text_field :username, class: "input__content input__container" %>
      </div>

      <div class="field">
        <%= f.label :name, class:"content-sm" %><br />
        <%= f.text_field :name, class: "input__content input__container" %>
      </div>

      <div class="field">
        <%=f.label :cover, "Avatar", class:"content-sm"%>
        <%=f.file_field :cover, accept: "image/png, image/jpeg", class:"input__content input__container"%>   
      </div>

      <div class="field">
        <%= f.label :password , class:"content-sm"%> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class: "input__content input__container" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class:"content-sm" %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class: "input__content input__container" %>
      </div>

      <div class="actions flex flex-column flex-center-items mt-0_5">
        <%= f.submit "Submit", class: "button button--primary" %>
        <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
      </div>
<% end %>

</div>
</div>