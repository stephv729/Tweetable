<div class="container bg-white">
  <h2 class="content-lg center p-1">Login</h2>
  <div data-turbo="false" class="border-bg">
    <div class="container-sm mt-1_625">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class:"content-sm" %><br />
        <%= f.email_field :email, autofocus: true, class: "input__content input__container" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"content-sm" %><br />
        <%= f.password_field :password, class: "input__content input__container" %>
      </div>

      <div class="actions flex flex-center-items mt-0_5">
        <%= f.submit "Submit", class: "button button--primary" %>
      </div>
    <% end %>

    <div class="center"> <%= render "devise/shared/links" %> </div>
  </div>
</div>
</div>
